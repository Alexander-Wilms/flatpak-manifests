{
	"app-id": "org.texstudio.texstudio",
	"runtime": "org.kde.Platform",
	"runtime-version": "master",
	"sdk": "org.kde.Sdk",
	"command": "texstudio",
	"rename-icon": "texstudio",
	"rename-appdata": "texstudio",
	"rename-desktop-file": "texstudio.desktop",
	"finish-args":[
		"--socket=x11",
		"--share=network"
	],
	"modules":[
		{
			"name": "libxmu",
			"buildsystem": "autotools",
			"sources": [
				{
					"type": "archive",
					"url": "http://xorg.freedesktop.org/releases/individual/lib/libXmu-1.1.2.tar.bz2",
					"sha256": "756edc7c383254eef8b4e1b733c3bf1dc061b523c9f9833ac7058378b8349d0b"
				}
			]
		},
		{
			"name": "libxaw",
			"buildsystem": "autotools",
			"sources": [
				{
					"type": "archive",
					"url": "http://xorg.freedesktop.org/releases/individual/lib/libXaw-1.0.13.tar.bz2",
					"sha256": "8ef8067312571292ccc2bbe94c41109dcf022ea5a4ec71656a83d8cce9edb0cd"
				}
			]
		},
		{
			"name": "texlive-texmf",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "archive",
					"url": "http://ftp.math.utah.edu/pub/tex/historic/systems/texlive/2016/texlive-20160523b-texmf.tar.xz",
					"sha256": "99be507089583ce33da359e52a29f7df43281b52e7a50d05e2f8b3fbdddb68b7"
				}
			],
			"build-commands": ["mkdir -p /app/textmf", "mv * .[^.]* /app/texmf", "cd / && ls && cd /app && ls"]
		},
		{
			"name": "texlive-source",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/Alexander-Wilms/texstudio-archive/raw/master/texlive-20160523b-source.tar.xz",
					"sha256": "a8b32ca47f0a403661a09e202f4567a995beb718c18d8f81ca6d76daa1da21ed"
				}
			],
			"build-commands": ["./Build --prefix=/app/texlive"]
		},
		{
			"name": "poppler",
			"buildsystem": "autotools",
			"sources": [
				{
					"type": "archive",
					"url": "https://poppler.freedesktop.org/poppler-0.53.0.tar.xz",
					"sha256": "592bf72960c6b5948b67657594b05e72d9a278daf7613c9f3cdff9a5b73096a8"
				}
			]
		},
		{
			"name": "texstudio",
			"buildsystem": "simple",
			"cleanup-platform": ["/bin", "/mkspecs"],
			"sources": [
				{
					"type":"archive",
					"url": "https://github.com/Alexander-Wilms/texstudio-archive/raw/master/texstudio-2.12.2.tar.gz",
					"sha256": "3ffdaf0a3cb8bb9801e68ecba7641778b94121b4320de8751b79f2d8718cdcb1"
				}
			],
			"build-commands": [
				"qmake PREFIX=/app",
				"make",
				"make install"
			]
		}
	]
}
